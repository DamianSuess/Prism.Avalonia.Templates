<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SampleApp.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
        x:Class="SampleApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo.ico"
        Title="{Binding Title}"
        Height="350" Width="500">

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
    <Label Content="Click to show a dialog window" />
    
    <Button Command="{Binding CmdShowMessageBox}" Content="Simple MessageBox Dialog" />
    <Button Command="{Binding CmdShowModalDialog}" Content="Custom Modal Dialog" />
    <Button Command="{Binding CmdShowNonModalDialog}" Content="Non-Modal Dialog (Without Parent)" />

    <StackPanel Orientation="Horizontal">
      <Label Content="Result:" FontWeight="Bold" />
      <Label Content="{Binding ReturnedResult}" />
    </StackPanel>

  </StackPanel>
</Window>
